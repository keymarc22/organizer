= simple_form_for(@task) do |f|
	= f.error_notification
	= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

	.form-inputs
		.row
			.col-sm-6
				= f.input :name, label: t('forms.input.name')
			.col-sm-3
				= f.input :due_date, as: :string, input_html: { type: :date }, label: t('forms.input.due_date')
			.col-sm-3
				= f.association :category, label: t('forms.input.category')
		.row
			.col-sm-12
				= f.input :description
		#addParticipants
			%br
			%h3
				.uppercased-font{ style: 'display: inline-block;' }= t('forms.subtitle.participants')
				= link_to_add_association f, :participating_users, class: 'btn btn-info float-right', 'data-association-insertion-node' => '.participants .participants-container', 'data-turbolinks' => false do
					= t('forms.button.add_participants')
					.fa.fa-plus-circle
			.participants
				= f.simple_fields_for :participating_users do |g|
					= render 'participating_user_fields', f: g
				.participants-container
		.form-actions
			= f.button :submit, class: 'btn btn-info'